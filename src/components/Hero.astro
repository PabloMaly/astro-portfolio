---
import MailButton from "./react/MailButton";
import LogoWall from "./LogoWall.astro";
import { Image } from "astro:assets";

interface Props {
  name: string;
  title: string;
  location: string;
}

const { name, title, location } = Astro.props;
---

<section
  class="flex items-center justify-center px-4 bg-white relative overflow-hidden"
>
  <div class="max-w-4xl mt-30 mb-10 mx-auto text-center relative z-10">
    <div class="mb-8 relative">
      <div
        class="w-42 h-42 mx-auto rounded-full overflow-hidden border-4 border-white shadow-lg relative z-10"
      >
        <Image
          src="/profile.jpeg"
          alt={name}
          class="w-full h-full object-cover"
          width={400}
          height={400}
        />
      </div>
      <div
        class="absolute inset-0 -m-2 bg-blue-100 rounded-full blur-lg opacity-50"
      >
      </div>
    </div>

    <h1 class="text-5xl md:text-6xl font-bold mb-4 text-black">
      Hi, I'm {name}
    </h1>
    <h2 class="text-5xl mb-5 block text-[var(--sec)] shiny-sec">
      Frontend Developer
    </h2>

    <p
      class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto leading-relaxed"
    >
      I'm a {title} based in {location} building exceptional and accessible digital
      experiences for the web.
    </p>

    <div class="flex justify-center gap-6">
      <a
        href="https://github.com/PabloMaly"
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.237 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </a>
      <a
        href="https://www.linkedin.com/in/pablo-malynovytch/"
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow"
      >
        <Image
          src="/linkedin.svg"
          alt="LinkedIn"
          class="w-6 h-6"
          width={24}
          height={24}
        />
      </a>
      <div class="flex gap-2">
        <MailButton client:load email="pablomalyk@gmail.com" />
      </div>
      <a
        href="/resume/CV-Pablo-Malynovytch.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="p-2 bg-white rounded-full shadow-md hover:shadow-lg transition-shadow flex items-center gap-2"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7 10 12 15 17 10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
        <span class="text-sm font-medium">Download Resume</span>
      </a>
    </div>
  </div>
</section>
<LogoWall />

<style is:global>
  .shiny-sec {
    background: linear-gradient(135deg, #0066ff 25%, #94bfff 50%, #0066ff 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 2s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }
</style>
