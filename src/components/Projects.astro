---
interface Project {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  demoUrl?: string;
  sourceUrl?: string;
  isLive?: "live" | "offline" | "dev";
}

const projects: Project[] = [
  {
    title: "Covid Tracker",
    description:
      "A web application that tracks the spread of COVID-19 across the world.",
    image: "/projects/covid-tracker.png",
    technologies: ["React", "TailwindCSS", "React Charts", "RestAPI"],
    demoUrl: undefined,
    sourceUrl: "https://github.com/PabloMaly/covid-tracker",
    isLive: "offline",
  },
  {
    title: "Property Management",
    description:
      "A real estate marketplace that helps people buy, sell, rent homes.",
    image: "/projects/prop-app.png",
    technologies: [
      "React",
      "Astro",
      "Supabase",
      "Styled Components",
      "Tailwindcss",
      "Typescript",
    ],
    sourceUrl: "https://github.com/yourusername/taskapp",
    isLive: "dev",
  },
  {
    title: "Portfolio Website",
    description:
      "A responsive portfolio website built with Astro and Tailwind CSS",
    image: "/projects/portfolio.png",
    technologies: ["Astro", "Tailwind CSS", "React", "Vercel"],
    demoUrl: "https://demo-portfolio.example.com",
    sourceUrl: "https://github.com/PabloMaly/astro-portfolio",
    isLive: "live",
  },
];
---

<div class="max-w-6xl mx-auto">
  <h2 class="text-4xl font-bold mb-16 text-center text-black">
    Featured Projects
  </h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      projects.map((project) => (
        <article class="bg-white rounded-lg overflow-hidden border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 flex flex-col min-h-[500px]">
          <div class="aspect-video bg-gray-100 relative overflow-hidden shrink-0">
            <img
              src={project.image}
              alt={`Screenshot of ${project.title}`}
              class="object-cover w-full h-full"
              loading="lazy"
            />
          </div>
          <div class="p-6 flex flex-col flex-1">
            <div class="flex items-center gap-3 mb-4">
              <h3 class="text-xl font-bold text-gray-900">{project.title}</h3>
              <div
                class={`px-2 py-0.5 text-xs font-medium rounded-full ${project.isLive === "live" ? "bg-green-100 text-green-700" : project.isLive === "offline" ? "bg-red-100 text-red-700" : "bg-gray-100 text-gray-600"}`}
              >
                {project.isLive === "live" ? (
                  <span class="inline-block w-2 h-2 rounded-full mr-2 bg-green-500" />
                ) : project.isLive === "offline" ? (
                  <span class="inline-block w-2 h-2 rounded-full mr-2 bg-red-500" />
                ) : (
                  <span class="inline-block w-2 h-2 rounded-full mr-2 bg-gray-500" />
                )}
                {project.isLive === "live"
                  ? "Live"
                  : project.isLive === "offline"
                    ? "Offline"
                    : "In Dev"}
              </div>
            </div>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map((tech) => (
                <span class="px-3 py-1 text-xs font-medium text-[#0066ff] bg-blue-50 rounded-full">
                  {tech}
                </span>
              ))}
            </div>
            <div class="flex gap-4 mt-auto">
              {project.demoUrl && (
                <a
                  href={project.demoUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group inline-flex items-center gap-2 px-4 py-2 
                                       text-[#0066ff] border border-[#0066ff] rounded-md
                                       hover:bg-[#0066ff] hover:text-white
                                       transition-all duration-200"
                >
                  <span class="text-sm font-medium">View Demo</span>
                </a>
              )}
              {project.sourceUrl && (
                <a
                  href={project.sourceUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group inline-flex items-center gap-2 px-4 py-2
                                       text-gray-600 border border-gray-600 rounded-md
                                       hover:bg-gray-600 hover:text-white
                                       transition-all duration-200"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="w-5 h-5"
                  >
                    {" "}
                    <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />{" "}
                  </svg>
                  <span class="text-sm font-medium">Source Code</span>
                </a>
              )}
            </div>
          </div>
        </article>
      ))
    }
  </div>
  <div class="flex justify-center mt-16">
    <a
      href="https://github.com/PabloMaly"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-3 px-8 py-4 rounded-md border border-[#0066ff] text-[#0066ff] hover:bg-[#0055dd] hover:text-white transition-colors duration-300 shadow-md"
    >
      <span class="text-lg font-medium">More projects on</span>
      <svg viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path
          d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.237 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
        ></path>
      </svg>
    </a>
  </div>
</div>

